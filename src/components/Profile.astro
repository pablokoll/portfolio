---
import { presentation } from '@data/presentation.ts';
import FileIcon from '@icons/FileIcon.astro';
import StarIcon from '@icons/StarIcon.astro';
import { Image } from 'astro:assets';

const { title, description, profile, openToWork } = presentation;
---

<Image
    class='m-auto sm:m-0 size-44 rounded-full shadow-lg border-[8px] dark:border-slate-400/20 border-slate-200/80'
    src={profile}
    alt='Pablo Koll'
    loading='lazy'
    decoding="async"
/>
<div
    class='flex flex-col items-center text-center sm:items-start sm:text-start sm:justify-center gap-2'>
    <h1 class='text-slate-600 dark:text-slate-100 sm:text-4xl text-2xl font-bold'>
        {title}
    </h1>
    <p class='text-pretty text-slate-700 dark:text-slate-300 text-sm sm:text-lg max-w-xl'>
        {description}
    </p>
    <div class='flex justify-center gap-2 mt-0.5'>
        {openToWork && <StarIcon className='size-6' />}
        <a
            href='/resume'
            target="_blank"
            class='flex items-center gap-2 px-4 py-2 text-sm font-semibold rounded-xl dark:text-slate-200 text-slate-700 dark:bg-gray-600/70 dark:hover:bg-gray-300/65 bg-sky-200/60 hover:bg-sky-200/90'>
            <FileIcon />
            Resume
        </a>
    </div>
</div>
