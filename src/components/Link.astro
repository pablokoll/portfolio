---
import { links } from '@data/linktree.ts';
import type { Link } from '../types/types';
---

<div class="flex flex-col gap-5 items-center w-60 sm:w-96">
    {
        links.map((link: Link) => (
                <a class="w-full flex flex-row justify-center items-center p-1.5 gap-2 rounded-lg bg-slate-200/80 dark:bg-slate-400/20" aria-label={link.name}  href={link.url} target={link.target}>
                <h2 class="text-center text-base self-center sm:text-lg text-slate-700 dark:text-slate-200 font-semibold">
                    {link.name}  
                    </h2>
                </a>
        ))
    }
</div>
