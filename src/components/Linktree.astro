---
import { linktree } from '@data/linktree.ts';
import { Image } from 'astro:assets';

const { title, image } = linktree;
---

<Image
    class='m-auto sm:m-0 size-44 rounded-full shadow-lg border-[8px] dark:border-slate-400/20 border-slate-200/80'
    src={image}
    alt='Linktree Image'
    loading='lazy'
    decoding="async"
/>
<div
    class='flex flex-col items-center text-center sm:items-start sm:text-start sm:justify-center gap-2'>
    <h1 class='text-slate-600 dark:text-slate-100 sm:text-4xl text-2xl font-extrabold'>
        {title}
    </h1>
</div>
