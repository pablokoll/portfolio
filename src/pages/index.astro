---
import Layout from '@layouts/Layout.astro';
import SpeedInsights from '@vercel/speed-insights/astro';

import ThemeIcon from '@icons/ThemeIcon.astro';
import Link from '../components/Link.astro';
import Linktree from '../components/Linktree.astro';
---

<Layout
    title='Pablo Koll'
    description='Software developer with experience in web development'>
    <header
        class='mx-auto max-w-3xl sticky top-0 z-20 h-16 flex justify-end items-center p-6 bg-white dark:bg-gray-800 bg-opacity-80 dark:bg-opacity-80 backdrop-blur-lg'>
        <ThemeIcon />
    </header>
    <main class='flex flex-col gap-16 sm:max-w-3xl m-auto p-5'>
        <section class='flex flex-col justify-center items-center gap-2 sm:gap-5'>
            <Linktree />
        </section>
        <section class="flex flex-col justify-center items-center gap-2">
            <Link />
        </section>
        <hr class='border-dashed border-1' />
    </main>
    <SpeedInsights />
</Layout>
